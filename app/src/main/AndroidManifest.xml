<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:ndroid="http://schemas.android.com/apk/distribution"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.andromeda.ara">

    <uses-permission
            android:name="android.permission.WAKE_LOCK"/> <!-- Required for complications to receive complication data and open the provider chooser. -->
    <uses-permission android:name="com.google.android.wearable.permission.RECEIVE_COMPLICATION_DATA"/>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission
            android:name="android.permission.BIND_VOICE_INTERACTION"
            android:protectionLevel="signature|system"
            tools:ignore="ProtectedPermissions"/>
    <uses-permission
            android:name="android.permission.MANAGE_VOICE_KEYPHRASES"
            tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".activitys.SkillsActivity"
                android:label="@string/title_activity_skills"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activitys.PrefsActivity"
                android:label="@string/title_activity_prefs"
                android:theme="@style/AppTheme.NoActionBar"/>
        <!--
        <provider
            android:name=".services.AraSkillsDBCP"
            android:authorities="mainDB"
            android:enabled="true"
            android:exported="true"></provider>
        -->
        <service
                android:name=".services.AraActions"
                android:enabled="true"
                android:exported="true"/>

        <activity
                android:name=".activitys.AccountSettings"
                android:label="@string/title_activity_account_settings"/>
        <activity
                android:name=".activitys.SignIn"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.microsoft.identity.client.BrowserTabActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                        android:host="auth"
                        android:scheme="msalfbc54802-e5ba-4a5d-9e02-e3a5dcf4922b"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".voice.VoiceMain"
                android:hardwareAccelerated="false"
                android:theme="@style/AppTheme.Translucent">
            <intent-filter>
                <category android:name="android.intent.category.VOICE"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activitys.AllContent"
                android:label="@string/title_activity_all_content"
                android:parentActivityName=".activitys.MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.andromeda.ara.activitys.MainActivity"/>
        </activity>

        <receiver android:name=".widgets.NewAppWidget2">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/new_app_widget2_info"/>
        </receiver>

        <activity android:name=".widgets.NewAppWidget2ConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <uses-library
                android:name="org.apache.http.legacy"
                android:required="true"/>

        <activity
                android:name=".activitys.About"
                android:label="@string/title_activity_about"
                android:parentActivityName=".activitys.MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.andromeda.ara.activitys.MainActivity"/>
        </activity>
        <activity
                android:name=".activitys.MainActivity"
                android:hardwareAccelerated="false"
                android:label="@string/app_name"
                android:supportsRtl="true"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
                android:name=".voice.AssistServ"
                android:permission="android.permission.BIND_VOICE_INTERACTION"
                android:process=":interactor">
            <meta-data
                    android:name="android.voice_interaction"
                    android:resource="@xml/recognition_service"/>

            <intent-filter>
                <action android:name="android.service.voice.VoiceInteractionService"/>
            </intent-filter>
        </service>
        <service
                android:name=".voice.AssistSessServ"
                android:permission="android.permission.BIND_VOICE_INTERACTION"/>
    </application>

</manifest>